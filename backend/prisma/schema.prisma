// prisma/schema.prisma
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTENTICAÇÃO E USUÁRIOS
// ============================================

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bills         Bill[]
  revokedTokens RevokedToken[]

  @@map("users")
}

model RevokedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
  @@index([userId])
  @@map("revoked_tokens")
}

// ============================================
// CONTAS (BILLS)
// ============================================

enum BillStatus {
  PENDING_OCR    // Aguardando processamento OCR
  OCR_FAILED     // Falha no OCR
  REVIEWING      // Usuário revisando itens
  DIVIDING       // Usuário dividindo conta
  COMPLETED      // Divisão finalizada
}

model Bill {
  id              String     @id @default(uuid())
  userId          String
  imageUrl        String     // URL da imagem no S3
  imageKey        String     // Chave do S3 para deletar
  status          BillStatus @default(PENDING_OCR)
  ocrRawText      String?    @db.Text // Texto bruto do OCR
  totalAmount     Decimal?   @db.Decimal(10, 2)
  establishmentName String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items        BillItem[]
  participants Participant[]
  fees         Fee[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("bills")
}

// ============================================
// ITENS DA CONTA
// ============================================

model BillItem {
  id          String  @id @default(uuid())
  billId      String
  name        String
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)
  totalPrice  Decimal @db.Decimal(10, 2)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bill      Bill       @relation(fields: [billId], references: [id], onDelete: Cascade)
  divisions Division[]

  @@index([billId])
  @@map("bill_items")
}

// ============================================
// PARTICIPANTES
// ============================================

model Participant {
  id        String   @id @default(uuid())
  billId    String
  name      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bill      Bill       @relation(fields: [billId], references: [id], onDelete: Cascade)
  divisions Division[]

  @@index([billId])
  @@map("participants")
}

// ============================================
// DIVISÕES (Quem paga o quê)
// ============================================

model Division {
  id            String  @id @default(uuid())
  billItemId    String
  participantId String
  shareAmount   Decimal @db.Decimal(10, 2) // Valor que essa pessoa paga deste item
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  billItem    BillItem    @relation(fields: [billItemId], references: [id], onDelete: Cascade)
  participant Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@unique([billItemId, participantId]) // Cada pessoa divide cada item apenas 1x
  @@index([billItemId])
  @@index([participantId])
  @@map("divisions")
}

// ============================================
// TAXAS (Garçom, Couvert)
// ============================================

enum FeeType {
  SERVICE_PERCENTAGE // Taxa de serviço (% sobre total)
  SERVICE_FIXED      // Taxa fixa de serviço
  COVER_CHARGE       // Couvert fixo
}

model Fee {
  id          String   @id @default(uuid())
  billId      String
  type        FeeType
  description String?
  value       Decimal  @db.Decimal(10, 2) // Valor ou percentual
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bill Bill @relation(fields: [billId], references: [id], onDelete: Cascade)

  @@index([billId])
  @@map("fees")
}